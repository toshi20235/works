<%= flash[:notice] %>
<h1>Edit Book</h1>
<% if @book.errors.any? %>
    <%= @book.errors.count %> errors prohibited this book from being saved
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
   <% end %>
<%= form_with model: @book do |f| %>
<h4>title</h4>
<%= f.text_field :title %>
<h4>body</h4>
<%= f.text_area :body %>
<div class="box"><%= f.submit 'Update Book' %></div>
<div class="show-back">
    <%=link_to "Show", book_path %>|
     <%= link_to 'Back', books_path %>
</div>
<% end %>